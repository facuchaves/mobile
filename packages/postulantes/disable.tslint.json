{
  "extends": ["tslint:recommended", "tslint-config-prettier", "tslint-react-hooks"],
  "rules": {
    "react-hooks-nesting": "error",
    "max-line-length": {
      "options": [150]
    },
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": true,
    "no-console": {
      "severity": "warning",
      "options": ["debug", "info", "log", "time", "timeEnd", "trace"]
    },
    "comment-format": false,
    "max-classes-per-file": false,
    "quotemark": [true, "single", "avoid-escape", "avoid-template"],
    "semicolon": false,
    "ban-types": false,
    "arrow-parens": false,
    "object-literal-sort-keys": false,
    "curly": [true, "ignore-same-line"],
    "no-duplicate-switch-case": true,
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-typecast",
      "check-type-operator",
      "check-preblock",
      "check-postbrace"
    ]
  },
  "jsRules": {
    "max-line-length": {
      "options": [150]
    }
  }
}

